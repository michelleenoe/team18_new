---
const {image, title, address, link} = Astro.props;
---

<article>
    <img src={image} alt="">
    <h2>{title}</h2>
    <h3>{address}</h3>
    <a href={link}>Kunsteren</a>
    <slot />
</article>

<style>
   article{
    align-items: center; 
    display: grid;
    grid-template-columns: 1fr;
    margin: 5% 0%;
    max-width: 90%;
   }

   img{
    display: flex;
    justify-content: center;
    border-radius: 30%;
    margin: auto;
    width: 100%;
    border: solid white 2px;
    box-shadow: 0px 0px 10px 0px #fff844;
   }

   h2{
    display: flex;
    justify-content: center;
    color: white;
    font-size: 24px;
    margin: 3% auto;
   }

   h3{
    display: flex;
    justify-content: center;
    color: white;
    font-size: 12px;
    margin: 4% auto;
    margin-top: 10%;
   }

   a{
    display: flex;
    justify-content: center;
    font-size: 24px;
    margin: auto;
   }


</style>