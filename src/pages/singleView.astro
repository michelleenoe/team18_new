<style>

	.kunstnerlist a{
		color: #FF9900;
		font-size: 30px;
	} 
	.kunstnerlist{
		text-align: center;
		font-weight: bold;
	}
	.artist, .info, .location{
		margin-bottom: 20px;
	}
	 .artist, .location, h2, h3, h4{
		text-align: center;
	}
	h2, h3, h4, h5, h6, p, a{
		font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		color: white;
		margin: 0%;
	}
	h2{
		font-size: 40px;
	}
	h3{
		font-size: 30px;
	}
	p{
		font-size: 15px;
	}
	header{
		display: grid;
		grid-template-columns: 1fr 4fr 1fr;
	}
	main{
        display: grid;
		grid-template-columns: 1fr 6fr 1fr;
        align-content: center;
	}
	section{
		grid-column: 2;
		grid-row: 2;
	}
	section img{
		margin: auto;
		max-width: 100%;
		display: block;
	}
	.back{
	grid-column: 1;
	grid-row: 1;
	margin: auto;
	font-weight: bold;
	font-size: 20px;
	color: #FF9900;
	}
	.logo{
		max-height: 50%;
		max-width: 100%;
		border-radius: 10px;
		margin: auto;
	}
</style>